<%= link_to edit_entry_path(entry), class: "entry-link" do %>

  <div class="entry">
    <div class="entry-header">
      <p><%= entry.name %></p>
      <p class="entry-owner"><%= entry.user || "Unknown User" %></p> <!-- Move owner to the top-right -->
    </div>
    <p><strong>Link:</strong> <%= entry.link %></p>

    <% if entry.user != current_user %>
      <p><em>This entry is read-only.</em></p>
    <% end %>
  </div>
<% end %>
